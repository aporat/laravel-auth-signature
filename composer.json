{
  "name": "aporat/laravel-auth-signature",
  "description": "A Laravel package providing a middleware for validating API requests with HMAC-SHA256 signatures",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/aporat/laravel-auth-signature",
  "keywords": [
    "laravel",
    "api",
    "auth",
    "authentication",
    "security",
    "signature",
    "hmac",
    "middleware"
  ],
  "authors": [
    {
      "name": "Adar Porat",
      "email": "aporat28@gmail.com",
      "homepage": "https://github.com/aporat",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.4",
    "aporat/laravel-filter-var": "^3.1.2 || ^3.0",
    "illuminate/support": "^10.0 || ^11.0 || ^12.0"
  },
  "require-dev": {
    "laravel/pint": "^1.21",
    "mockery/mockery": "^1.6",
    "orchestra/testbench": "^8.0 || ^9.0 || ^10.0",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.0 || ^11.0"
  },
  "autoload": {
    "psr-4": {
      "Aporat\\AuthSignature\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aporat\\AuthSignature\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Aporat\\AuthSignature\\AuthSignatureServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "phpunit --no-coverage",
    "test-ci": "phpunit --coverage-clover coverage.xml",
    "lint": "vendor/bin/pint --test",
    "analyse": "phpstan analyse",
    "qa": [
      "@lint",
      "@analyse",
      "@test"
    ]
  },
  "support": {
    "issues": "https://github.com/aporat/laravel-auth-signature/issues",
    "source": "https://github.com/aporat/laravel-auth-signature"
  }
}
